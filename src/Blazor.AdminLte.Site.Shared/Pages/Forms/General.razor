@page "/forms/general"
<ContentHeader>
    <Header>
        <Blazor.AdminLte.PageTitle Title="General Form" />
    </Header>
</ContentHeader>
<ContentMain>
    <Row>
        <Column Classes="col.md._6">
            <Card HeaderBackgroundColor="Color.Primary" ToolOptions="new CardToolOptions { Collapsable = true, Maximizable=true}">
                <Title><CardTitle>Quick Example</CardTitle></Title>
                <Header><CardTools /></Header>
                <Body>
                    <FormGroup>
                        @code {
        List<InputState> Inputs = new List<InputState>()
                        {
                        new InputState(){Identifier="exampleInputEmail1", Placeholder="Enter email", Label="Email Address", Type="email"},
                        new InputState(){Identifier="exampleInputPassword1", Placeholder="Password", Label="Password", Type="password"},
                        new InputState(){Identifier="exampleInputFile1", Placeholder="Choose file", Label="Email Address", Type="file"}
                        };
                        }
                        @for (int i = 0; i < Inputs.Count; i++)
                        {
                            <Input @bind-Value="Inputs[i]" /> <text>Value: @Inputs[i].Value;</text>

                            @System.Text.Json.JsonSerializer.Serialize(Inputs[i])
                            ;
                            <br />
                        }
                    </FormGroup>
                </Body>
                <Footer>
                    <Button>Submit</Button>
                </Footer>
            </Card>
        </Column>
        <Column Classes="col.md._6">
            <Card HeaderBackgroundColor="Color.Primary" ToolOptions="new CardToolOptions { Collapsable = true, Maximizable=true}">
                <Title><CardTitle>Quick Example (Icons)</CardTitle></Title>
                <Header><CardTools /></Header>
                <Body>
                    <FormGroup>
                        @code {
        List<InputState> Inputs2 = new List<InputState>()
                        {
                        new InputState(){Identifier="exampleInputEmail1", Placeholder="Enter email", Label="Email Address", Type="email", Icon="fas fa-envelope"},
                        new InputState(){Identifier="exampleInputPassword1", Placeholder="Password", Label="Password", Type="password", Icon="fas fa-lock"},
                        new InputState(){Identifier="exampleInputFile1", Placeholder="Choose file", Label="Email Address", Type="file", Icon="fas fa-file"}
                        };
                        }
                        @for (int i = 0; i < Inputs2.Count; i++)
                        {
                            <Input @bind-Value="Inputs2[i]" /> <text>Value: @Inputs2[i].Value;</text>
                            @System.Text.Json.JsonSerializer.Serialize(Inputs2[i])
                            ;
                            <br />
                        }
                    </FormGroup>
                </Body>
                <Footer>
                    <Button>Submit</Button>
                </Footer>
            </Card>
        </Column>
        <Column Classes="col.md._6">
            <Card HeaderBackgroundColor="Color.Primary" ToolOptions="new CardToolOptions { Collapsable = true, Maximizable=true}">
                <Title><CardTitle>Quick Example (Icons and Colors)</CardTitle></Title>
                <Header><CardTools /></Header>
                <Body>
                    <FormGroup>
                        @code {
        List<InputState> Inputs3 = new List<InputState>()
                        {
                        new InputState(){Identifier="exampleInputEmail1", Placeholder="Enter email", Label="Email Address", Type="email", Icon="fas fa-envelope", BorderColor = Color.Info, IconBgColor= Color.Info},
                        new InputState(){Identifier="exampleInputPassword1", Placeholder="Password", Label="Password", Type="password", Icon="fas fa-lock", BorderColor = Color.Danger, IconBgColor = Color.Danger},
                        new InputState(){Identifier="exampleInputFile1", Placeholder="Choose file", Label="Email Address", Type="file", Icon="fas fa-file", BorderColor = Color.Secondary, IconBgColor = Color.Secondary}
                        };
                        }
                        @for (int i = 0; i < Inputs3.Count; i++)
                        {
                            <Input @bind-Value="Inputs3[i]" /> <text>Value: @Inputs3[i].Value;</text>

                            @System.Text.Json.JsonSerializer.Serialize(Inputs3[i])
                            ;
                            <br />
                        }

                    </FormGroup>
                </Body>
                <Footer>
                    <Button>Submit</Button>
                </Footer>
            </Card>
        </Column>

    </Row>

    <Card>
        <Title><CardTitle>Some simple link content</CardTitle></Title>
        <Body>
            <FormGroup>
                @code{
                    List<CustomCheckboxState> Checkboxes = new List<CustomCheckboxState>()
                                                {
                        new CustomCheckboxState(){ Identifier = "customCheckbox1", Value="option1", Label="Custom Checkbox"},
                        new CustomCheckboxState(){ Identifier = "customCheckbox2", Value="option2", IsChecked=true, Label= "Custom Checkbox checked"},
                        new CustomCheckboxState(){ Identifier = "customCheckbox3", Value="option3", IsDisabled=true, Label= "Custom Checkbox disabled"}
                    };
                }
                @for (int i = 0; i < 3; i++)
                {
                    <CustomCheckbox @bind-Value="Checkboxes[i]" /> <text>Checked: @Checkboxes[i].IsChecked;</text>
                    @System.Text.Json.JsonSerializer.Serialize(Checkboxes[i]);
                }
            </FormGroup>
        </Body>
    </Card>
</ContentMain>
